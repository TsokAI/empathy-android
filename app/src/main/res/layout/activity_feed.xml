<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/drawer_layout"
  android:layout_height="match_parent"
  android:layout_width="match_parent">

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_2a2c34"
    tools:context=".ui.feed.FeedActivity">

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_ffffff">

        <TextView
          android:id="@+id/toolbar"
          android:text="나의 여정 살펴보기"
          android:textColor="@color/_2a2c34"
          android:textSize="16sp"
          android:textStyle="bold"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="28dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
          android:id="@+id/dot"
          android:background="@drawable/oval"
          android:layout_width="7dp"
          android:layout_height="7dp"
          android:layout_marginTop="32dp"
          android:layout_marginLeft="20dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

        <TextView
          android:id="@+id/log_title"
          android:text="다른 사람의 여정들"
          android:textSize="15sp"
          android:textColor="@color/_2a2c34"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="20dp"
          app:layout_constraintTop_toBottomOf="@+id/dot"
          app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
          android:id="@+id/t_map"
          android:src="@drawable/ic_range_filter"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_marginRight="6dp"
          app:layout_constraintTop_toTopOf="@+id/map_current_location"
          app:layout_constraintRight_toLeftOf="@+id/map_current_location"
          app:layout_constraintBottom_toBottomOf="@+id/map_current_location"/>

        <TextView
          android:id="@+id/map_current_location"
          android:text="서울특별시 왕십리로 222"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginRight="17dp"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/log_title"/>

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/log_recycler"
          android:layout_width="match_parent"
          android:layout_height="192dp"
          android:layout_marginLeft="18dp"
          android:layout_marginTop="15dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/map_current_location"/>

        <FrameLayout
          android:id="@+id/my_log_container"
          android:layout_width="match_parent"
          android:layout_height="208dp"
          android:layout_marginTop="14dp"
          android:background="@drawable/icon"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/log_recycler"
          app:layout_constraintBottom_toTopOf="@+id/info_container">

          <TextView
            android:text="나의 여정 살펴보기"
            android:textSize="15sp"
            android:textColor="@color/_ffffff"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

          <ImageView
            android:src="@drawable/oval"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginTop="56dp"
            android:layout_gravity="center_horizontal"/>
        </FrameLayout>

        <FrameLayout
          android:id="@+id/info_container"
          android:layout_width="match_parent"
          android:layout_height="155dp"
          android:background="@drawable/ic_range_filter"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/my_log_container"
          app:layout_constraintBottom_toBottomOf="parent">

          <ImageView
            android:background="@color/_FF5656"
            android:layout_width="81dp"
            android:layout_height="6dp"/>

          <TextView
            android:text="왕십리\n화요일\n한여름 밤엔"
            android:textSize="15sp"
            android:textColor="@color/_ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="81dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
        </FrameLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.drawerlayout.widget.DrawerLayout>