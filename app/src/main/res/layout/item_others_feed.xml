<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@color/_ffffff"
  android:layout_width="164dp"
  android:layout_height="wrap_content"
  android:layout_marginRight="9dp"
  app:cardElevation="2dp"
  app:cardUseCompatPadding="true">

  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
      android:id="@+id/log_image"
      android:layout_width="match_parent"
      android:layout_height="125dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <ImageView
        android:src="@drawable/icon"
        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="106dp"/>
      <com.empathy.empathy_android.view.RoundImageView
        android:id="@+id/user_image"
        android:src="@drawable/icon"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="36dp"
        android:layout_height="36dp"/>
    </FrameLayout>

    <ImageView
      android:id="@+id/comma"
      android:src="@drawable/ic_comma"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="5dp"
      android:layout_width="6dp"
      android:layout_height="6dp"
      app:layout_constraintTop_toBottomOf="@+id/log_image"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

    <TextView
      android:id="@+id/title"
      android:text="시끄러운 경복궁에"
      android:textSize="14sp"
      android:textColor="@color/_2a2c34"
      android:singleLine="true"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="3dp"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/comma"
      app:layout_constraintBottom_toTopOf="@+id/username"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

    <TextView
      android:id="@+id/username"
      android:text="병탁님"
      android:textSize="13sp"
      android:textColor="@color/_2a2c34"
      android:layout_marginBottom="7dp"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/title"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
